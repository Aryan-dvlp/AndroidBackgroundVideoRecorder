<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="500dp"
    android:weightSum="1"
    android:orientation="vertical">


    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:id="@+id/pickContactDialogButton"
        android:background="@android:drawable/ic_menu_call"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textSize="20sp"
        android:text="or add number"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_marginTop="20dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addNumberEditer"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#848484"
        android:hint="Enter number..."
       />
</LinearLayout>
